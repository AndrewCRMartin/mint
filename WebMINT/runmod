#!/sbin/csh

# Usage: runmod <pid> <parent> ....
# This script is designed to run modeller in fully automated mode from a
# script generated by the WebMINT interface
#
set pid = $1
set tmpdir = "/home/bsm/martin/modeller/WebMINT/temp"

source /home/bsm/martin/modeller/setmodeller
cd $tmpdir
mkdir $pid
cd $pid
mv ../*_$pid.* .
/home/bsm/martin/modeller/pdb2seg webmint_$pid.pir /data/pdb_release/all/ pdb .ent webmint_$pid.seg $argv[2-]
/home/bsm/martin/sg/bin/modeller3/bin/mod3 webmint_$pid.top


#\rm -f $tmpdir/webmint_$pid.pir 
#\rm -f $tmpdir/webmint_$pid.seg 
#\rm -f $tmpdir/webmint_$pid.top 
